{% sw_extends '@Storefront/storefront/component/review/point.html.twig' %}

{% block component_review_point %}
	{% if type == 'half' %}
		<i class="fa-solid fa-star-half-stroke ju-star"></i>
	{% elseif type == 'blank' %}
		<i class="fa-regular fa-star ju-star blank"></i>
	{% else %}
		<i class="fa-solid fa-star ju-star"></i>
	{% endif %}
{% endblock %}
