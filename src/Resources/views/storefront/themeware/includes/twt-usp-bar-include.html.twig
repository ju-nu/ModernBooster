{% sw_extends '@Storefront/storefront/themeware/includes/twt-usp-bar-include.html.twig' %}

{% block twt_widget_usp_bar_item_1 %}
	{% if itemsShow or maxitems >= 1 %}
		<div class="twt-usp-bar-item twt-usp-{{ itemId }} item-1" {% if 'twt.extension.uspBar.usp1.tooltip'|trans is not empty %} data-bs-toggle="tooltip" data-placement="{% if type == 'header' %}bottom{% else %}top{% endif %}" title="{{ 'twt.extension.uspBar.usp1.tooltip'|trans }}" {% endif %}>
			<div class="item-icon">
				<i class="fa-regular fa-{{'twt.extension.uspBar.usp1.icon'|trans}}"></i>
			</div>
			<div class="item-label{% if isHover and 'twt.extension.uspBar.usp1.subtitle'|trans is not empty %} is-hover{% endif %}">
				<div class="item-title">{{ 'twt.extension.uspBar.usp1.title'|trans|raw }}</div>
				{% if 'twt.extension.uspBar.usp1.subtitle'|trans is not empty and showSubtitles %}
					<div class="item-subtitle">{{ 'twt.extension.uspBar.usp1.subtitle'|trans }}</div>
				{% endif %}
			</div>
		</div>
	{% endif %}
{% endblock %}


